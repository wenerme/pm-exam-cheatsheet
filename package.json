{
  "name": "ruankao-pm-cheatsheet",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.51.2",
    "autoprefixer": "^10.4.0",
    "classnames": "^2.3.1",
    "postcss": "^8.3.11",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "tailwindcss": "^2.2.19",
    "zustand": "^3.6.1"
  },
  "devDependencies": {
    "@originjs/vite-plugin-content": "^1.0.1",
    "@trivago/prettier-plugin-sort-imports": "^3.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react": "^1.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  },
  "prettier": {
    "bracketSameLine": false,
    "importOrder": [
      "^[^.]",
      "^[.][.]",
      "^[.][/]"
    ],
    "importOrderSeparation": false,
    "trailingComma": "all",
    "printWidth": 120,
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "*.html",
          "*.css"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "browserslist": [
    "since 2020-01"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  },
  "engines": {
    "node": "14",
    "npm": "8"
  }
}
